{
	"name": "Favorite Seller Avito",
	"version": "0.0.4",
	"manifest_version": 2,
	"description": "Add seller to favorites",
	"icons": {
		"19": "images/icon-19.png",
		"128": "images/icon-128.png"
	},
	"default_locale": "en",
	"background": {
		"scripts": [
			"scripts/background.js"
		],
    	"persistent": false
	},
	"permissions": [
	    "http://*/*",
	    "https://*/*",
	    "contextMenus",
	    "activeTab",
	    "notifications",
	    "storage",
    	"cookies"
	],
	"options_ui": {
		"page": "options.html",
		"chrome_style": true
	},
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
	"content_scripts": [
		{
			"matches": [
				"https://*.avito.ru/*"
			],
			"js": [
				"scripts/contentscript.js"
			]
		}
	],
	"page_action": {
		"default_icon": {
			"19": "images/icon-19.png"
		},
		"default_title": "favorite seller extention",
		"default_popup": "popup.html"
	}
}